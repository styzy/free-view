@import 'utils.styl'
@import 'button.styl'
.fv-button-group
	display inline-block
	vertical-align middle
	utils-cf()
	[class^='fv-button']
		float left
		margin-left 0
		margin-right -1px
		border-radius 0
		border-left 1px solid inherit
		&.is-circle, &.is-round
			border-radius 0
		&:first-child
			border-radius $--border-radius 0 0 $--border-radius
			&.is-circle, &.is-round
				border-radius 20px 0 0 20px
		&:last-child
			margin-right 0
			border-radius 0 $--border-radius $--border-radius 0
			&.is-circle, &.is-round
				border-radius 0 20px 20px 0